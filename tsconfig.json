{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSources": true,
        "lib": ["es2015","dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {"@angular/core": ["node_modules/@angular/core/*"]
        },
        "rootDir": "src/app",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "target": "es5"
    },
    "files": [
        "./src/app/index.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "strictMetadataEmit": true,
        "genDir": "aot-dist"
    }
}